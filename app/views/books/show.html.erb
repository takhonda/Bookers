		<h2>Book detail</h2>
		<table class='table'
		  <tr>
        <td>
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "profile-thumb", fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"%><br>
