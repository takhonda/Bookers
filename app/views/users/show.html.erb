 <div class='body'>
      <div class='container'>
        <% if flash[:notice] %>
     <p id="notice"><%= flash[:notice] %></p>
        <% end %>
      	<div class='row'>
  
  <div class='col-xs-3'>
    <h2>User info</h2>
    <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %>
</tr> 
      <tr>
    	  <th>name</th>
    	  <th><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @user.introduction %></th>
      </tr>
</table>

<div class='field row'>
  <%=link_to '',edit_user_path(@user), class:'col-xs-12 btn btn-default glyphicon glyphicon-wrench'%>
</div>


<%= render 'follow_form' %>
<%= render 'stats' %>

       
 <h2>New book</h2>
       <!-- form_for部分 -->
       
       <%= form_for(@book) do |f| %>
 <div class='field row'>
       <h4>Title</h4>
       <%= f.text_field :title, class:"col-xs-12 book_title" %>
 </div>

 <div class='field row'>
       <h4>Opinion</h4>
       <%= f.text_area :opinion, class:"col-xs-12 book_body" %>
 </div>
 <div class='field row'>
       <br><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></br>
 </div>
    <% end %>
</div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg',size: '50x50' %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>