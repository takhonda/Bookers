<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="#">
				Bookers
			</a>
		</div>
		
		<div class="collapse navbar-collapse" id="navbarEexample7">
			<ul class="nav navbar-nav navbar-right">
			  <% if user_signed_in? %>
			  <li><%= link_to 'Home',home_path, class:'glyphicon glyphicon-home'%></li>
        <li><%= link_to 'Users',users_path, class:'glyphicon glyphicon-user users'%></li>
        <li><%= link_to 'Books',books_path, class:'glyphicon glyphicon-book books'%></li>
			  <li>
			    <%= link_to 'Log Out',destroy_user_session_path,method: :delete, class:'glyphicon glyphicon-log-out logout' %>
			  </li>
  			<% else %>
  			  <li><%= link_to 'Home', home_path, class:'glyphicon glyphicon-home' %></li>
  				<li><%= link_to 'About', about_path, class:'glyphicon glyphicon-link about'%></li>
  				<li><%= link_to 'Sign Up',new_user_registration_path, class:'glyphicon glyphicon-edit sign_up' %></li>
  				<li><%= link_to 'Log in',new_user_session_path, class:'glyphicon glyphicon-log-in sign_in' %></li>
  			<% end %>
			</ul>
		</div>
	</div>
</nav>

  </div>
</header>
    <%= yield %>
  </body>
</html>
