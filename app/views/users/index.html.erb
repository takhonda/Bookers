<div class='body'>
      <div class='container'>
        <% if flash[:notice] %>
     <p id="notice"><%= flash[:notice] %></p>
        <% end %>
      	<div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb", fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %></tr> 
      <tr>
    	  <th>name</th>
    	  <th><%= current_user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @user.introduction %></th>
      </tr>
</table>

<div class='row'>
  <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_4245" href="/users/4245/edit"></a>
</div>
       
 <h2>New book</h2>
       <!-- form_for部分 -->
       <%= form_for(@book) do |f| %>
       <div class='field row'>
       <h4>Title</h4>
       <%= f.text_field :title, class:'col-xs-12 book_title' %>
       </div>
       <div class='field row'>
       <h4>Opinion</h4>
       <%= f.text_area :opinion, class:'col-xs-12 book_body' %>
       </div>
       <div class='field row'>
       <br><%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %></br>
       </div>
    <% end %>
</div>

 <div class='col-xs-9'>
    <div class="field row searchbox">
<%= form_tag(users_search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>
</div>
    <h2>Users</h2>

    <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg',size: '50x50', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show',user_path(user) %></a></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>