<div class='body'>
      <div class='container'>

        <p id="notice"></p>

      	<h2>User info</h2>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@user) do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, class:"name", id:"user[name]", placeholder:"user_name"%>
  </div>

  <div class="field">
    <label for="user_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, class:"fintroduction", id:"iuser_introduction", placeholder:"user[introduction]" %>
  </div>

  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
 <% end %>
      </div>
    </div>