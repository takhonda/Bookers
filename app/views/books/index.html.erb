<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <h2>New book</h2>
       <!-- form_for部分 -->
       <%= form_for(@book) do |f| %>
       <div class="field row">
       <h4>Title</h4>
       <%= f.text_field :title, class:"col-xs-12 book_title" %>
       </div>
       
       <div class="field row">
       <h4>Body</h4>
       <%= f.text_area :opinion, class:"col-xs-12 book_body"%>
       </div>
       
       <div class="field row">
       <br><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></br>
       </div>
    <% end %>
    </div>
    
    <div class='col-xs-9'>
    <div class="field row searchbox">
<%= form_tag(books_search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>
</div>

    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '50x50', fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %></td>
        <td><%= link_to book.title ,book_path(book.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
 </tbody>
 </table>
